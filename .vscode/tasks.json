{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "python3 per_build.py",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build with fanalyzer",
            "type": "shell",
            "command": "python3 per_build.py --fanalyzer",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "build with bootloader",
            "type": "shell",
            "command": "python3 per_build.py --bootloader",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "python3 per_build.py --clean",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "generate can library",
            "type": "shell",
            "command": "python3 ./common/can_library/canpiler/build.py",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "run doxygen",
            "type": "shell",
            "command": "doxygen Doxyfile"
        }
    ]
}