{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": ["node_name", "scheduler", "busses"],
    "additionalProperties": false,
    "properties": {
        "node_name": { "type": "string" },
        "node_id": { "type": "integer", "minimum": 0, "maximum": 31 },
        "scheduler": { "enum": ["psched", "freertos"]},
        "busses": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/bus_messages"
            },
            "minProperties": 1
        }
    },
    "$defs": {
        "bus_messages": {
            "type": "object",
            "required": ["peripheral"],
            "additionalProperties": false,
            "properties": {
                "peripheral": { "enum": ["CAN1", "CAN2"] },
                "accept_all_messages": { "type": "boolean" },
                "tx": {
                    "type": "array",
                    "items": { "$ref": "file:///message_schema.json#/$defs/tx_message" }
                },
                "rx": {
                    "type": "array",
                    "items": { "$ref": "file:///message_schema.json#/$defs/rx_message" }
                }
            }
        }
    }
}
